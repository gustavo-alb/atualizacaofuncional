<%= simple_form_for @carga_horaria, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :carga_horaria %>
  <%= error_span(@carga_horaria[:carga_horaria]) %>
  <%= f.input :nome %>
  <%= error_span(@carga_horaria[:nome]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                administracao_carga_horarias_path, :class => 'btn btn-default' %>
<% end %>

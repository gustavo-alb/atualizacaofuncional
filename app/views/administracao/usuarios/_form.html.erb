<%= simple_form_for @usuario,:url=>@caminho, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.input :cpf,input_html:{class: "cpf"}%>
<%= error_span(@usuario[:cpf]) %>
<%= f.input :nome %>
<%= error_span(@usuario[:nome]) %>
<% if @usuario.grupo%>
<%= f.input :grupo,:collection=>Usuario.grupos.collect{|c|[c[0],c[0]]},:selected=>@usuario.grupo %>
<% else%>
<%= f.input :grupo,:collection=>Usuario.grupos.collect{|c|[c[0],c[0]]} %>
<% end %>
<%= error_span(@usuario[:admin]) %>
<%= f.input :password,:label=>"Senha" %>
<%= error_span(@usuario[:password]) %>
<%= f.input :password,:label=>"Confirmação de Senha" %>
<%= error_span(@usuario[:password]) %>
<%= f.label "Lotação"%><i>Digite parte do nome do orgão que procura, e clique em cima do resultado desejado.</i>
<%= f.input :lotacao_nome,:label=>false, :url => autocomplete_local_nome_administracao_usuarios_path, :as => :autocomplete, :id_element => '#usuario_local_id',:input_html=>{:class=>"string form-control",:style=>"width: 100%",'data-auto-focus' => true},:wrapper_html=>{:class=>"string"}%>
<%= f.input :lotacao_id,:as=>:hidden%>
<%= error_span(@usuario[:local]) %>

<%= f.button :submit, :class => 'btn-primary' %>
<%= link_to t('.cancel', :default => t("helpers.links.cancel")),
administracao_usuarios_path, :class => 'btn btn-default' %>
<% end %>

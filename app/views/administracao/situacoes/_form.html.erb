<%= simple_form_for @situacao, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :nome %>
  <%= error_span(@situacao[:nome]) %>
  <%= f.input :codigo %>
  <%= error_span(@situacao[:codigo]) %>

  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                administracao_situacoes_path, :class => 'btn btn-default' %>
<% end %>
